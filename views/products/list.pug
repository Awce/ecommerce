extends ../layout.pug

block content
  
  h1.title Stickers

    div(class="columns is-desktop is-vcentered")
      div(class="column is-three-quarters-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd is-one-quarter")
        each p in products
          -var productId = p._id
            div("card is-shady")
              figure(class="image is-4by3")
                  img(class="is-128x128" src=`${p.productImageURL}`)
              .card-content
                h3(class="title is-3")
                  a(href="/products/detail/" + productId) #{p.name}
                h4.subtitle $ #{p.price}.00
                footer.card-footer
                  form(action="/cart/add/", method="post")
                    input(type="hidden", name="productId", value=productId)
                    input(type="submit", class="button is-primary" value="Agregar al Carrito")






